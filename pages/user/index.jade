doctype html
html(lang='en')
  head
    include ../../public/jade/mixins.jade
    link(rel="stylesheet" type="text/css" href="styles/main.css")
    title #{name}

  body#body-js

    .headings
      h1 Welcome #{name}

    .messages
      if err
        .err
          p #{err}
      if suc
        .suc
          p #{suc}
          button#undo-js(type="button") Undo

    .add_time
      form(action="/user/add_event/#{user_id}", method='post')
        label Activity
        input(type='text', name='activity')
        br
        label Start time
        input(type='datetime-local', name='start_time')#js-start
        br
        label End time
        input(type='datetime-local', name='end_time')#js-end
        br
        .submit
          button#submit-js(type='submit', disabled='disabled') Add time

    +scripts
    script(type='text/javascript' src='scripts/main.js')
